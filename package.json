{
  "name": "pulsoid-electron",
  "version": "1.0.0",
  "author": "NekoSuneVR",
  "license": "MIT",
  "description": "PulsoidApp is Program use Pulsoid With Discord RPC and Dashboard on App with Overlay can use on OBS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:pi": "electron-builder --linux deb,AppImage --armv7l --arm64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.nekosunevr.pulsoidapp",
    "productName": "PulsoidApp",
    "copyright": "Copyright Â© 2024-2025 NekoSuneVR",

    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },

    "files": [
      "**/*",
      "!node_modules/.cache"
    ],

    "asar": true,

    "linux": {
      "category": "Utility",
      "maintainer": "NekoSuneVR",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "deb",
          "arch": ["armv7l", "arm64"]
        },
        {
          "target": "AppImage",
          "arch": ["armv7l", "arm64"]
        }
      ],
      "synopsis": "Pulsoid with Discord RPC and overlay dashboard",
      "description": "PulsoidApp brings Pulsoid with Discord Rich Presence and an in-app dashboard with an OBS-friendly overlay."
    },

    "deb": {
      "priority": "optional",
      "depends": [
        "libgtk-3-0",
        "libnss3",
        "libxss1",
        "libasound2",
        "libatk-bridge2.0-0",
        "libdrm2",
        "libgbm1"
      ]
    }
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-store": "^7.0.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^25.1.8"
  }
}
